# --- Public Firebase web config (used in the client) ---
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""

# --- Firebase Admin SDK credentials for server-side access ---
FIREBASE_PROJECT_ID=""
FIREBASE_CLIENT_EMAIL=""
# Keep the exact newline escapes; Firebase Admin expects the raw key string.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"

# --- OpenAI moderation / assistance ---
OPENAI_API_KEY=""
# Optional model overrides (defaults are set in code)
OPENAI_ASSIST_MODEL="gpt-4o-mini"
OPENAI_SUGGESTION_MODEL="gpt-4o-mini"

# --- Postgres / Prisma v2 backend ---
DATABASE_URL="postgresql://user:password@host:5432/uyan_chat"
DEVICE_ID_SALT=""                # Unique per-environment salt for hashing device ids (shared between Firestore and v2)

# --- Internal service secrets ---
ADMIN_DASHBOARD_TOKEN=""         # Bearer token for /admin routes
CRON_SECRET=""                   # Bearer token for scheduled cleanup job

# --- Rate limiting (optional tuning) ---
RATE_LIMIT_MESSAGE_PER_HOUR="3"           # messages allowed per window for one device
RATE_LIMIT_MESSAGE_WINDOW_MINUTES="60"    # window length in minutes for message limit
RATE_LIMIT_RESPONSE_PER_HOUR="10"         # responses allowed per window for one device
RATE_LIMIT_RESPONSE_WINDOW_MINUTES="60"   # window length in minutes for response limit
RATE_LIMIT_REPORT_PER_DAY="5"             # reports allowed per window for one device hash
RATE_LIMIT_REPORT_WINDOW_MINUTES="1440"   # window length in minutes for report limit (default 24h)

# --- Debug helpers (optional) ---
NEXT_PUBLIC_DEBUG_DEVICE=""      # Force DevicePathWidget to show a specific device id
